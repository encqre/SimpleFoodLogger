<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="32dp">
<item>
    <shape  android:shape="rectangle">
        <solid android:color="?attr/genericSurfaceColor" />
        <stroke
            android:width="1dp"
            android:color="?attr/cardBorderColor" />
        <corners android:radius="8dp" />
    </shape>
</item>

<item
    android:drawable="@drawable/arrow_dropdown"
    android:gravity="center_vertical|end"
    android:right="12dp"
    android:width="12dp"
    android:height="12dp"
    />

</layer-list>