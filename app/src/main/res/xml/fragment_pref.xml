<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:key="goals_category"
        app:title="Daily Targets">


        <EditTextPreference
            app:key="pref_calories"
            app:title="Set daily calories target"
            app:summary="Current target: 2500 kcal"/>

        <Preference
            app:key="pref_macros"
            app:title="Set macronutrient targets"
            app:summary="Protein: 200g (30%)\nCarbs: 300g (40%)\nFat: 100g (30%)"
            />


    </PreferenceCategory>

    <PreferenceCategory
        app:key="units_category"
        app:title="Unit settings">

        <ListPreference
            app:key="pref_units"
            app:title="Select preferred units"
            app:entries="@array/units"
            app:entryValues="@array/units"/>


    </PreferenceCategory>

    <PreferenceCategory
        app:key="statistics_category"
        app:title="Statistics settings">

        <CheckBoxPreference
            app:key="pref_stats_ignore_zero_kcal_days"
            app:title="Ignore days with 0 calories"
            app:summary="When calculating average calories and macronutrients for selected time period, ignore days with 0 calories consumed"
            />


    </PreferenceCategory>

    <PreferenceCategory
        app:key="food_items_category"
        app:title="Food Database">

        <Preference
            app:key="pref_hidden_food_list"
            app:title="View/restore hidden food items"
            app:summary="Number of hidden foods: 24"/>

        <EditTextPreference
            app:key="pref_recent_foods_size"
            app:title="Set recent foods list size"
            app:summary="10"/>



    </PreferenceCategory>

    <PreferenceCategory
        app:key="backups_category"
        app:title="File Management">

        <Preference
            app:key="pref_backup"
            app:title="Backup database files to SD card"
            app:summary="Last backup date: 2018 December 12"/>

        <Preference
            app:key="pref_import"
            app:title="Import exported files"
            app:summary="Imports the latest Database Backup file. Asks permission to add any new food/log database entries"/>

        <Preference
            app:key="pref_import_common_foods"
            app:title="Import common food database"
            app:summary="Temporary option"
            />

        <Preference
            app:key="pref_import_extended_foods"
            app:title="Import extended food database"
            app:summary="Temporary option"
            />
    </PreferenceCategory>





</androidx.preference.PreferenceScreen>