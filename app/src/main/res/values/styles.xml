<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (light) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/LoggerTabStyleLight</item>
        <item name="homePageProgressBarStyle">@style/LoggerProgressBarStyleLight</item>
        <item name="homePageConstraintLayoutBackgroundColor">@color/white</item>
        <item name="homePageTextColor">@color/black</item>
        <item name="listItemMacroTextColor">@color/darkGray</item>
        <item name="listItemKcalTextColor">@color/colorPrimary</item>
        <item name="listItemSeparatorColor">@color/lightGray</item>
        <item name="floatingActionButtonStyle">@style/LoggerFABStyleLight</item>
        <item name="LoggerToolbarSearchViewStyle">@style/LoggerToolbarSearchViewStyleLight</item>
<!--        <item name="toolbarStyle">@style/LoggerToolBarStyleLight</item>-->
    </style>

    <!-- Dark application theme -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/LoggerTabStyleDark</item>
        <item name="materialButtonStyle">@style/LoggerButtonStyleDark</item>
        <item name="homePageProgressBarStyle">@style/LoggerProgressBarStyleDark</item>
        <item name="homePageConstraintLayoutBackgroundColor">@color/veryDarkGray</item>
        <item name="homePageTextColor">@color/white</item>
        <item name="android:colorBackground">@color/darkGray</item>
        <item name="listItemMacroTextColor">@color/lightGray</item>
        <item name="listItemKcalTextColor">@color/colorPrimaryLight</item>
        <item name="listItemSeparatorColor">@color/Gray</item>
        <item name="LoggerToolbarSearchViewStyle">@style/LoggerToolbarSearchViewStyleDark</item>
    </style>

    <!-- Tab Layout styles -->

    <style name="LoggerTabStyleLight" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/darkGray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>

    <style name="LoggerTabStyleDark" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/veryDarkGray</item>
        <item name="tabTextColor">@color/lightGray</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>

    <!-- Progress Bar styles -->

    <style name="LoggerProgressBarStyleLight">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="LoggerProgressBarStyleDark">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Button styles -->

    <style name="LoggerButtonStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/veryLightGray</item>
    </style>

    <style name="LoggerFABStyleLight" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>

    <!-- Searchview styles (in toolbar) -->

    <style name="LoggerToolbarSearchViewStyleLight" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/slightlyLightGray</item>
        <item name="android:tint">@color/lightGray</item>
        <item name="android:textCursorDrawable">@drawable/toolbar_searchview_cursor_light</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="LoggerToolbarSearchViewStyleDark" parent="Widget.AppCompat.SearchView">
<!--        <item name="android:textColorHint">@color/lightGray</item>-->
<!--        <item name="android:tint">@color/lightGray</item>-->
<!--        <item name="android:textCursorDrawable">@drawable/toolbar_searchview_cursor_light</item>-->
<!--        <item name="android:textColorPrimary">@color/white</item>-->
    </style>

