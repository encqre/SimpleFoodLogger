<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (light) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/LoggerTabStyleLight</item>
        <item name="progressBarStyle">@style/progressBarStyleLight</item>
        <item name="genericSurfaceColor">@color/white</item>
        <item name="textOnGenericSurfaceColor">@color/black</item>
        <item name="textOnAccentColor">@color/white</item>
        <item name="listItemTitleTextColor">@color/black</item>
        <item name="listItemMacroTextColor">@color/darkGray</item>
        <item name="listItemKcalTextColor">@color/colorPrimary</item>
        <item name="recyclerViewItemSeparatorColor">@color/lightGray</item>
        <item name="floatingActionButtonStyle">@style/LoggerFABStyleLight</item>
        <item name="LoggerToolbarSearchViewStyle">@style/LoggerToolbarSearchViewStyleLight</item>
        <item name="toolbarBackgroundColor">@color/colorPrimary</item>
        <item name="recyclerViewBackgroundColor">@color/lightGray</item>
        <item name="textOnRecyclerViewBackgroundColor">@color/darkGray</item>
        <item name="recyclerViewItemBackgroundColor">@color/white</item>
        <item name="bottomTabBarSelectedColor">@color/colorPrimary</item>
        <item name="foodTypeCustomColor">@color/foodTypeCustomColor</item>
        <item name="foodTypeCommonColor">@color/colorAccent</item>
        <item name="foodTypeUSDAColor">@color/veryDarkGray</item>
        <item name="cardBorderColor">@color/slightlyLightGray</item>
    </style>

    <!-- Dark application theme -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/darkThemePrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkThemeAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/LoggerTabStyleDark</item>
        <item name="materialButtonStyle">@style/LoggerButtonStyleDark</item>
        <item name="progressBarStyle">@style/progressBarStyleDark</item>
        <item name="genericSurfaceColor">@color/darkThemeSurface</item>
        <item name="textOnGenericSurfaceColor">@color/textOnDarkestSurface</item>
        <item name="textOnAccentColor">@color/black</item>
        <item name="android:colorBackground">@color/darkThemeSurface</item>
        <item name="listItemTitleTextColor">@color/lightGray</item>
        <item name="listItemMacroTextColor">@color/slightlyLightGray</item>
        <item name="listItemKcalTextColor">@color/darkThemeAccent</item>
        <item name="recyclerViewItemSeparatorColor">@color/Gray</item>
        <item name="LoggerToolbarSearchViewStyle">@style/LoggerToolbarSearchViewStyleDark</item>
        <item name="toolbarBackgroundColor">@color/darkThemeToolbar</item>
        <item name="recyclerViewBackgroundColor">@color/darkerGray</item>
        <item name="textOnRecyclerViewBackgroundColor">@color/lightGray</item>
        <item name="recyclerViewItemBackgroundColor">@color/darkGray</item>
        <item name="bottomTabBarSelectedColor">@color/darkThemeAccent</item>
        <item name="foodTypeCustomColor">@color/foodTypeCustomColor</item>
        <item name="foodTypeCommonColor">@color/darkThemeAccent</item>
        <item name="foodTypeUSDAColor">@color/slightlyLightGray</item>
        <item name="cardBorderColor">@color/slightlyDarkGray</item>
    </style>

    <!-- Tab Layout styles -->

    <style name="LoggerTabStyleLight" parent="Widget.MaterialComponents.TabLayout">
<!--        <item name="tabBackground">@color/white</item>-->
        <item name="tabTextColor">@color/darkGray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>

    <style name="LoggerTabStyleDark" parent="Widget.MaterialComponents.TabLayout">
<!--        <item name="tabBackground">@color/darkThemeSurface</item>-->
        <item name="tabTextColor">@color/lightGray</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/darkThemeAccent</item>
    </style>

    <!-- Progress Bar styles -->

    <style name="progressBarStyleLight">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="progressBarStyleDark">
        <item name="colorAccent">@color/darkThemePrimary</item>
    </style>

    <!-- Button styles -->

    <style name="LoggerButtonStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/veryLightGray</item>
    </style>

    <style name="LoggerFABStyleLight" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>

    <!-- Searchview styles (in toolbar) -->

    <style name="LoggerToolbarSearchViewStyleLight" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/slightlyLightGray</item>
        <item name="android:tint">@color/lightGray</item>
        <item name="android:textCursorDrawable">@drawable/toolbar_searchview_cursor_light</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="LoggerToolbarSearchViewStyleDark" parent="Widget.AppCompat.SearchView">
<!--        <item name="android:textColorHint">@color/lightGray</item>-->
<!--        <item name="android:tint">@color/lightGray</item>-->
<!--        <item name="android:textCursorDrawable">@drawable/toolbar_searchview_cursor_light</item>-->
<!--        <item name="android:textColorPrimary">@color/white</item>-->
    </style>

