<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dialog_add_log_serving_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Servings"
        android:textAppearance="@style/TabThingy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_fat" />

    <TextView
        android:id="@+id/dialog_add_log_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Date"
        android:textAppearance="@style/TabThingy"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_log_date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_log_date_button" />

    <TextView
        android:id="@+id/dialog_add_log_date_button"
        style="@style/TabThingy"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dialog_add_log_calories_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20 June, Thursday" />

    <TextView
        android:id="@+id/dialog_add_log_weight_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/dialog_add_log_weight_textview_metric"
        android:textAppearance="@style/TabThingy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_date_button" />

    <EditText
        android:id="@+id/dialog_add_log_weight"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:hint="100"
        app:layout_constraintBottom_toTopOf="@+id/dialog_add_log_serving_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_weight_textview" />

    <TextView
        android:id="@+id/dialog_add_log_calories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Calories:"
        android:textAppearance="@style/TabThingy"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_weight"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_date_button" />

    <TextView
        android:id="@+id/dialog_add_log_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_log_calories_textview"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_calories_textview"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_log_calories_textview"
        tools:text="250.0 kcal" />

    <TextView
        android:id="@+id/dialog_add_log_protein_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Protein:"
        android:textAppearance="@style/TabThingy"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_weight"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_calories_textview" />

    <TextView
        android:id="@+id/dialog_add_log_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_log_protein_textview"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_protein_textview"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_log_protein_textview"
        tools:text="12.5g" />

    <TextView
        android:id="@+id/dialog_add_log_carbs_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Carbs:"
        android:textAppearance="@style/TabThingy"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_weight"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_protein_textview" />

    <TextView
        android:id="@+id/dialog_add_log_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_log_carbs_textview"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_carbs_textview"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_log_carbs_textview"
        tools:text="19.1g" />

    <TextView
        android:id="@+id/dialog_add_log_fat_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Fat:"
        android:textAppearance="@style/TabThingy"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_weight"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_carbs_textview" />

    <TextView
        android:id="@+id/dialog_add_log_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_log_fat_textview"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_log_fat_textview"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_log_fat_textview"
        tools:text="8.2g" />


    <RadioGroup
        android:id="@+id/dialog_add_log_serving_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_log_serving_textview">

        <RadioButton
            android:id="@+id/dialog_add_log_serving1_radio_button"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="wing, bone and skin removed (125g)" />

        <RadioButton
            android:id="@+id/dialog_add_log_serving2_radio_button"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text='medium (2.66" diameter) (242g)' />


        <RadioButton
            android:id="@+id/dialog_add_log_serving3_radio_button"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text='very large (12" diameter) (378g)' />


    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>