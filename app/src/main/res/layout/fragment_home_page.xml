<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_date_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="8dp"
        android:background="?attr/homePageConstraintLayoutBackgroundColor"
        android:elevation="8dp"
        android:outlineProvider="background">

        <Button
            android:id="@+id/image_button_previousday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/previous_day"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:tint="@color/black"
            app:icon="@drawable/arrow_left"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/date_picker_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/date_picker_button" />

        <Button
            android:id="@+id/date_picker_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/image_button_nextday"
            app:layout_constraintStart_toEndOf="@+id/image_button_previousday"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/image_button_nextday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/next_day"
            android:tint="@color/black"
            app:icon="@drawable/arrow_right"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/date_picker_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/date_picker_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_day_counters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:background="?attr/homePageConstraintLayoutBackgroundColor"
        android:layout_below="@id/layout_date_buttons"
        android:elevation="8dp"
        android:outlineProvider="background"
        android:outlineSpotShadowColor="@color/black">

        <TextView
            android:id="@+id/textview_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Calories: 756 / 3090"
            android:textColor="?attr/homePageTextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar_calories"
            android:theme="?attr/homePageProgressBarStyle"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:max="2500"
            android:progress="1650"
            app:layout_constraintEnd_toEndOf="@+id/textview_calories"
            app:layout_constraintStart_toStartOf="@+id/textview_calories"
            app:layout_constraintTop_toBottomOf="@+id/textview_calories" />

        <TextView
            android:id="@+id/textview_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Protein: 12/180g"
            android:textColor="?attr/homePageTextColor"
            app:layout_constraintEnd_toStartOf="@+id/textview_carbs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar_calories" />

        <ProgressBar
            android:id="@+id/progress_bar_protein"
            android:theme="?attr/homePageProgressBarStyle"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:max="200"
            android:progress="120"
            app:layout_constraintEnd_toEndOf="@+id/textview_protein"
            app:layout_constraintStart_toStartOf="@+id/textview_protein"
            app:layout_constraintTop_toBottomOf="@+id/textview_protein" />

        <TextView
            android:id="@+id/textview_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Carbs: 75/225g"
            android:textColor="?attr/homePageTextColor"
            app:layout_constraintEnd_toEndOf="@+id/textview_calories"
            app:layout_constraintStart_toStartOf="@+id/textview_calories"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar_calories" />

        <ProgressBar
            android:id="@+id/progress_bar_carbs"
            android:theme="?attr/homePageProgressBarStyle"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:max="300"
            android:progress="50"
            app:layout_constraintEnd_toEndOf="@+id/textview_calories"
            app:layout_constraintStart_toStartOf="@+id/textview_calories"
            app:layout_constraintTop_toBottomOf="@+id/textview_carbs" />

        <TextView
            android:id="@+id/textview_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Fat: 30/95g"
            android:textColor="?attr/homePageTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_carbs"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar_calories" />

        <ProgressBar
            android:id="@+id/progress_bar_fat"
            android:theme="?attr/homePageProgressBarStyle"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progress="40"
            app:layout_constraintEnd_toEndOf="@+id/textview_fat"
            app:layout_constraintStart_toStartOf="@+id/textview_fat"
            app:layout_constraintTop_toBottomOf="@+id/textview_fat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/log_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_day_counters"
        android:layout_marginTop="0dp"></androidx.recyclerview.widget.RecyclerView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_logmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:src="@drawable/plus_sign"
        android:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/colorPrimaryDark"
        app:borderWidth="2dp"
        app:useCompatPadding="true" />

</RelativeLayout>